{
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.15.3",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "dev:container": "docker-compose -f ./docker-compose.local.yml up",
    "format": "prettier -w -u .",
    "lint:fix": "eslint --ext .js,.ts,.vue --ignore-path .eslintignore --fix .",
    "typecheck": "vue-tsc --noEmit && tsc --noEmit",
    "up": "taze major -I",
    "prepare": "husky install",
    "prebuild": "rimraf ./dist",
    "clean:js": "tsc --build --clean"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.23",
    "@vuelidate/core": "^2.0.3",
    "@vuelidate/validators": "^2.0.4",
    "@vueuse/core": "^10.11.1",
    "base-64": "^1.0.0",
    "pinia": "^2.3.1",
    "qrcode.vue": "^3.6.0",
    "uuid": "^9.0.1",
    "vue": "^3.5.22",
    "vue-qrcode-reader": "^5.7.3",
    "vue-router": "^4.5.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@iconify-json/carbon": "^1.2.13",
    "@iconify-json/fluent": "^1.2.32",
    "@types/base-64": "^1.0.2",
    "@types/node": "^20.19.19",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@unocss/eslint-config": "^0.58.9",
    "@unocss/reset": "^0.58.9",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue-macros/volar": "^0.18.18",
    "@vue/eslint-config-standard": "^8.0.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^9.33.0",
    "execa": "^8.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "pnpm": "^8.15.9",
    "rimraf": "^5.0.10",
    "sass": "^1.93.2",
    "taze": "^0.13.9",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "unocss": "^0.58.9",
    "unplugin-auto-import": "^0.17.8",
    "unplugin-vue-components": "^0.26.0",
    "unplugin-vue-macros": "^2.14.5",
    "vite": "^5.4.20",
    "vue-tsc": "^3.1.0"
  },
  "lint-staged": {
    "**/*.{vue,js,ts,html,css,scss}": "npm run format",
    "src/**/*.{vue,js,ts}": "npm run lint:fix"
  },
  "eslintConfig": {
    "extends": [
      "@unocss"
    ]
  }
}
